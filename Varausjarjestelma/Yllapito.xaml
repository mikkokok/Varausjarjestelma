                        <Label x:Name="lbl_Sali" Content="Sali" Style="{StaticResource LabelStyle}" HorizontalAlignment="Left" Margin="26,146,0,0" VerticalAlignment="Top"/>
                    </Grid>

                    <Grid x:Name="Perustietojen_Paivitys_Grid" Visibility="Collapsed">
