<Window x:Class="Varausjarjestelma.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Varausjarjestelma"
        mc:Ignorable="d"
        Title="Kirjaudu Sisään" FontFamily="Sans"  Height="218.085" Width="300">
    <Grid Height="189" VerticalAlignment="Top">
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="#4c4cff" Offset="0.9" />
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="lbl_nimi" Content="Nimi" Foreground="White" HorizontalAlignment="Left" Margin="34,25,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_salasana" Content="Salasana" HorizontalAlignment="Left" Margin="34,76,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_ilmoitus" Content="Väärä nimi tai salasana" Foreground="Red" HorizontalAlignment="Left" Margin="122,120,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txt_kayttajaNimi" HorizontalAlignment="Left" Height="23" Margin="122,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_salasana" HorizontalAlignment="Left" Height="23" Margin="122,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_kirjaudu" Content="Kirjaudu" HorizontalAlignment="Left" Margin="167,152,0,0" VerticalAlignment="Top" Width="75" ClickMode="Press"/>
        <Button x:Name="btn_rekisteroidy" Content="Rekisteröidy" HorizontalAlignment="Left" Margin="34,152,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>

